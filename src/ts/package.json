{
  "name": "cloesce",
  "version": "0.0.5-unstable.27",
  "description": "Compile simple TypeScript classes into a full stack Cloudflare project.",
  "type": "module",
  "license": "Apache-2.0",
  "scripts": {
    "test": "vitest run",
    "format:fix": "prettier --write .",
    "format": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "build": "tsc -p tsconfig.json && npm run copy-rs-orm-wasm && npm run copy-generator-wasm && chmod +x dist/cli.js",
    "copy-rs-orm-wasm": "cp ../orm/target/wasm32-unknown-unknown/release/orm.wasm ./dist/orm.wasm",
    "copy-generator-wasm": "cp ../generator/target/wasm32-wasip1/release/cli.wasm ./dist/generator.wasm"
  },
  "dependencies": {
    "cmd-ts": "^0.14.1",
    "ts-morph": "^22.0.0",
    "wrangler": "^4.34.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250906.0",
    "miniflare": "^4.20251217.0",
    "oxlint": "^1.32.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.16",
    "typescript": "^5.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^3.2.4"
  },
  "exports": {
    "./backend": {
      "types": "./dist/ui/backend.d.ts",
      "import": "./dist/ui/backend.js"
    }
  },
  "bin": {
    "cloesce": "dist/cli.js"
  },
  "typesVersions": {
    "*": {
      "backend": [
        "dist/ui/backend.d.ts"
      ]
    }
  },
  "files": [
    "dist/**/*"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18.17"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bens-schreiber/cloesce.git"
  },
  "homepage": "https://github.com/bens-schreiber/cloesce",
  "keywords": [
    "cloudflare",
    "workers",
    "d1",
    "orm",
    "cli"
  ]
}
